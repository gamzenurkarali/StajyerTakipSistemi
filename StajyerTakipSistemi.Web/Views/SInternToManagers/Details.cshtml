@model StajyerTakipSistemi.Web.Models.SInternToManager

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<style>
    
    main.pb-3 {
        overflow: visible !important;
        font-size: smaller !important;
 
    }

    .s-container {
        background-color: white;
        border-radius: 20px;
        padding: 1rem;
        max-height: 600px;
        min-height: 600px;
        height: 600px;
    }
</style>
<div class="container">
    <div class="con">
        <div class="header">
            <div class="header__title">DETAYLAR</div>
        </div>
    <div class="s-container">
    <dl class="row" style="padding:2rem;">
        <dt class="col-sm-2">
            Stajyer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Intern.FirstName) @Html.DisplayFor(model => model.Intern.LastName)
        </dd>
        <dt class="col-sm-2">
            Yetkili Kişi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.FirstName) @Html.DisplayFor(model => model.Manager.LastName)
        </dd>
        <div>
                    <a class="clone-button" asp-action="Edit" asp-route-id="@Model?.Id">DÜZENLE</a> |
                    <a class="clone-button" asp-action="Index">LİSTEYE DÖN</a>
        </div>

    </dl>
</div>

    </div>
</div>