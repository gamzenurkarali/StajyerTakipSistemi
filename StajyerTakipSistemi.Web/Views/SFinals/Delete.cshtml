@model StajyerTakipSistemi.Web.Models.SFinal

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SFinal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İlgili Belgeler
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RelatedDocuments)
        </dd>
        <dt class="col-sm-2">
            GitHub Bağlantısı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GitHubLink)
        </dd>
        <dt class="col-sm-2">
            YouTube Bağlantısı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YouTubeLink)
        </dd>
        <dt class="col-sm-2">
            Değerlendirme Durumu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EvaluationStatus)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="SİL" class="btn btn-danger" /> |
        <a asp-action="Index">LİSTEYE DÖN</a>
    </form>
</div>
