@model StajyerTakipSistemi.Web.Models.SManager

@{
    ViewData["Title"] = "Details";

    Layout = "_AdminLayout";

}
<style>
     
    main.pb-3 {
        overflow: visible !important;
        font-size: smaller !important; 
    }

    .s-container {
        background-color: white;
        border-radius: 20px;
        padding: 1rem;
        max-height: 600px;
        min-height: 600px;
        height: 600px;
    }
</style>
<div class="container">
    <div class="con">
        <div class="header">
            <div class="header__title">Detaylar</div>
        </div>


        <div class="s-container">
    <dl class="row" style="padding:2rem;">
                <dt class="col-sm-2">
                    Ad
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    Soyad
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    E-posta Adresi
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    Telefon Numarası
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    Kullanıcı Adı
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </dd>
                <dt class="col-sm-2">
                    Şifre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Password)
                </dd>
                <dt class="col-sm-2">
                    GUID
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Guid)
                </dd>
                <div>
                    <a class="clone-button" asp-action="Edit" asp-route-id="@Model?.Id">DÜZENLE</a> |
                    <a class="clone-button" asp-action="Index">LİSTEYE DÖN</a>
                </div>

    </dl>
</div>
    </div>
</div>
