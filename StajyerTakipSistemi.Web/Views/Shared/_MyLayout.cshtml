
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StajyerTakipSistemi.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://unpkg.com/balloon-css/balloon.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/ShakeDiv.css" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <style>
        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
            background-color: #F5F5F5;
        }

       ::-webkit-scrollbar {
            width: 6px;
            background-color: #F5F5F5;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #eb1a79;
        }

        html {
            font-family: 'Poppins', sans-serif;
            overflow:hidden;
        }
        body{
            background-color: #f9fafb;
            /* background-color: #eef2fb; */
        }
        .sidebar{
            position: fixed;
            display: flex;
            flex-direction: column;
            flex-wrap: nowrap;
            align-items: center;
            padding: 2%;
            background-color: #ffffff;
            height: -webkit-fill-available;
            font-size: 26px;
            color: black;
        }

        .sidebar nav ul li {
            list-style-type: none; 
            text-decoration: none; 
            
        }

        .sidebar nav ul li a:hover span {
            transform: scale(1.2); 
            color: #eb1a79; 
        }

        a{
            color:inherit;
        }
        
        .material-symbols-outlined {
            font-weight: bold; 
        }

        .clone-button {
            display: inline-block;
            font-size: 1em;
            background: #fff;
            padding: 10px 30px;
            text-transform: uppercase;
            text-decoration: none;
            font-weight: 500;
            margin-top: 10px;
            color: #111;
            letter-spacing: 2px;
            transition: 0.2s;
        }

            .clone-button:hover {
                letter-spacing: 6px;
            }

            .header__title {
            font-size: 1.5rem;
            font-weight: 500;
            text-transform: uppercase;
            margin-right: auto;
            
            }

        .header {
            background-color: transparent;
            color: black;
            padding: .75rem 1rem;
            display: flex;
            align-items: center;
            border-top-left-radius: .5rem;
            border-top-right-radius: .5rem;
            grid-row: 1;
            grid-column: 1/4;
            border-bottom: solid;
            margin-bottom: 1.375rem;
        }

        .container {
            max-width: 1140px;
            margin: 0 auto;
        }

        .con { 
            padding-block-start: 2rem;
        }

        #alertDiv {
            position: fixed;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
        }
    </style>
    <div class="sidebar">
        <nav>
            <ul style="display: contents;">
                
                        <li>
                            <a style="margin-top: 50%;" aria-label="Dashboard" data-balloon-pos="right" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                <span class="material-symbols-outlined dashboard">dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a style="margin-top: 50%;" aria-label="Sohbet" data-balloon-pos="right" asp-area="" asp-controller="Chat" asp-action="Chat">
                                <span class="material-symbols-outlined chat" hidden>chat</span>
                                <span class="material-symbols-outlined mark_unread_chat_alt">mark_unread_chat_alt</span>
                            </a>
                        </li>
                        <li>
                            <a style="position: absolute;bottom: 3%;" aria-label="Çıkış Yap" data-balloon-pos="right" asp-area="" asp-controller="Home" asp-action="Logout">
                                <span class="material-symbols-outlined">logout</span>
                            </a>
                        </li>
                  
               
                   
            </ul>
        </nav>
        
    </div>

    <div class="container" >
        <main role="main" class="pb-3" style="    overflow: hidden;">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            
            var currentUrl = window.location.pathname;

            
            document.querySelectorAll(".material-symbols-outlined").forEach(function (icon) {
                icon.style.color = "black";
            });

            
            if (currentUrl.includes("/ManagerDashboard") || currentUrl.includes("/InternDashboard")) {
                document.querySelector(".material-symbols-outlined.dashboard").style.color = "#eb1a79";
            } else if (currentUrl.includes("/Chat")) {
                document.querySelector(".material-symbols-outlined.chat").style.color = "#eb1a79";
                document.querySelector(".material-symbols-outlined.mark_unread_chat_alt").style.color = "#eb1a79";
            }
        });
    </script>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
